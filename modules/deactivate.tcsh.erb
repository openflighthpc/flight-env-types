module purge

foreach var (module_avail_opts module_clear_opts module_cmds module_config_opts module_list_opts module_load_opts module_opts module_path_opts module_rm_path_opts)
  unset $var
end

foreach evar (LOADEDMODULES MODULEPATH MODULES_CMD MODULESHOME MODULES_USE_COMPAT_VERSION MODULEPATH_modshare)
  unsetenv $evar
end
unset evar

foreach avar (_module_avail _module_loaded _module_modulepath _module_not_yet_loaded _module_savelist  _module_savelist module switchml)
  unalias $avar
end
unset avar

unsetenv flight_ENV_active flight_ENV_scope flight_ENV_dir
set prompt="${flight_ENV_orig_prompt}"
unset flight_ENV_orig_prompt
setenv PATH "${flight_ENV_orig_PATH}"
unset flight_ENV_orig_PATH
setenv LD_LIBRARY_PATH "${flight_ENV_orig_LD_LIBRARY_PATH}"
unset flight_ENV_orig_LD_LIBRARY_PATH
