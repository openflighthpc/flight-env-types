set flight_ENV_orig_PATH = "$PATH"
set flight_ENV_orig_prompt = "$prompt"
if ($?LD_LIBRARY_PATH) then
  set flight_ENV_orig_LD_LIBRARY_PATH = "$LD_LIBRARY_PATH"
else
  set flight_ENV_orig_LD_LIBRARY_PATH = ""
endif

setenv LD_LIBRARY_PATH "<%= env_root %>/share/tcl/8.6.9/lib:$flight_ENV_orig_LD_LIBRARY_PATH"

source <%= env_root %>/share/modules/4.3.0/init/tcsh
if ( -f <%= env_root %>/modules+<%= env_name %>/modules.tcsh.rc ) then
  source <%= env_root %>/modules+<%= env_name %>/modules.tcsh.rc
endif

setenv flight_ENV_active "modules@<%= env_name %>"
setenv flight_ENV_scope "<%= env_global ? 'global' : 'user' %>"
setenv flight_ENV_dir "<%= env_root %>/modules+<%= env_name %>"

set bold='%{\033[1m%}'
set reverse='%{\033[7m%}'
set reset='%{\033[0;1m%}'
set clr='%{\033[0m%}'
set prompt="$bold<modules<%= env_name == 'default' ? '' : "@#{env_name}" %><%= env_global ? '$reverse{+}$reset' : '' %>>$clr $prompt"
unset bold reverse reset clr
